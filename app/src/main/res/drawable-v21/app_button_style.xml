<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#00AAEE"
                android:endColor="#00AAEE"
                android:angle="270" />
            <corners android:radius="4dp" />
            <stroke android:width="0px" android:color="#ABABAB" />
        </shape>
    </item>
    <item>
        <ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            android:color="#0077BB"
            tools:targetApi="lollipop">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="#0077BB" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>