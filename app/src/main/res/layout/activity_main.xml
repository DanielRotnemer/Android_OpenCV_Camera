<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cameraActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Activity"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sample_text" />

    <TextView
        android:id="@+id/opengl0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenGL0"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraActivity" />

    <TextView
        android:id="@+id/opengl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenGL1"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opengl0" />

    <TextView
        android:id="@+id/opengl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenGL2"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opengl1" />

    <TextView
        android:id="@+id/opengl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenGL3"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opengl2" />

    <TextView
        android:id="@+id/opengl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Preview"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opengl3"/>

    <TextView
        android:id="@+id/opengl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenGL5"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opengl4"/>

    <TextView
        android:id="@+id/gpucamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPU Camera"
        android:textSize="30dp"
        android:clickable="true"
        android:onClick="tv_OnClick"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opengl5"/>

</androidx.constraintlayout.widget.ConstraintLayout>